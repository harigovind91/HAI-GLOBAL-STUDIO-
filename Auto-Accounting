from apscheduler.schedulers.background import BackgroundScheduler
from accounting.reports import balance_sheet

def auto_update_reports():
    print("HAI System: Updating Global Reports...")
    balance_sheet()

scheduler = BackgroundScheduler()
# हर दिन रात 12 बजे रिपोर्ट अपडेट होगी
scheduler.add_job(auto_update_reports, 'cron', hour=0, minute=0)
scheduler.start()
